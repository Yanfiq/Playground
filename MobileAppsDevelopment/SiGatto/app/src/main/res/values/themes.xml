<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SiGatto" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Text.Title">
        <item name="android:layout_marginTop">33dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Header">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Text.Article">
        <item name="android:layout_marginTop">33dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Image">
        <item name="android:layout_marginTop">25dp</item>
    </style>
    <style name="Image.Large">
        <item name="android:layout_width">248dp</item>
        <item name="android:layout_height">248dp</item>
    </style>
    <style name="Image.Medium">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5pt</item>
    </style>

    <style name="Theme.SiGatto" parent="Base.Theme.SiGatto" />
</resources>